                  <HorizontalStackLayout Spacing="8">
                        <Border
                            Padding="0"
                            BackgroundColor="#B8C7E4"
                            HeightRequest="20"
                            HorizontalOptions="Start"
                            Stroke="Transparent"
                            StrokeShape="{RoundRectangle CornerRadius='10'}"
                            TranslationY="0"
