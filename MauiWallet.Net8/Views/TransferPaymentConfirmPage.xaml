                <Grid
                    ColumnDefinitions="Auto, *"
                    RowDefinitions="Auto, 1, Auto, 1, Auto, 1, Auto, 1, Auto"
                    RowSpacing="10">

                    <Label Text="{localization:Translate StringTransferTo}" VerticalOptions="Center" />
                    <HorizontalStackLayout
                        Grid.Column="1"
                        HorizontalOptions="EndAndExpand"
                        Spacing="5">
                        <Border
                            HeightRequest="30"
                            HorizontalOptions="End"
                            Stroke="#EAEEF6"
                            StrokeThickness="1"
                            VerticalOptions="Start"
                            WidthRequest="30">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15" />
                            </Border.StrokeShape>
                            <Image Aspect="AspectFill" x:Name="entryAvatar2" />
                        </Border>
                        <Label
                            FontAttributes="Bold"
                            x:Name="entryName"
                            TextColor="{DynamicResource BaseTextColor}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Rectangle
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Fill="{DynamicResource BaseSeparatorColor}"
                        HeightRequest="1"
                        IsVisible="{OnIdiom Phone='True',
                                            Tablet='True',
                                            Desktop='False'}" />

                    <Label
                        Grid.Row="2"
                        Text="{localization:Translate StringTransferAmount}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        x:Name="entryMonto"
                        TextColor="{DynamicResource BaseTextColor}"
                        VerticalOptions="Center" />

                    <Rectangle
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Fill="{DynamicResource BaseSeparatorColor}"
                        HeightRequest="1"
                        IsVisible="{OnIdiom Phone='True',
                                            Tablet='True',
                                            Desktop='False'}" />

                    <Label
                        Grid.Row="4"
                        Text="Fecha y Hora"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="4"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        x:Name="entryDatetime"
                        TextColor="{DynamicResource BaseTextColor}"
                        VerticalOptions="Center" />

                    <Rectangle
                        Grid.Row="5"
                        Grid.ColumnSpan="2"
                        Fill="{DynamicResource BaseSeparatorColor}"
                        HeightRequest="1"
                        IsVisible="{OnIdiom Phone='True',
                                            Tablet='True',
                                            Desktop='False'}" />

                   
                    <Rectangle
                        Grid.Row="7"
                        Grid.ColumnSpan="2"
                        Fill="{DynamicResource BaseSeparatorColor}"
                        HeightRequest="1"
                        IsVisible="{OnIdiom Phone='True',
                                            Tablet='True',
                                            Desktop='False'}" />

                    <Label
                        Grid.Row="8"
                        Text="{localization:Translate StringNote}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="8"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        x:Name="entryNota"
                        TextColor="{DynamicResource BaseTextColor}"
                        VerticalOptions="Center" />

                </Grid>

            </VerticalStackLayout>
        </ScrollView>

        <Button
            Grid.Row="1"
            Clicked="SubmitButton_Clicked"
            HeightRequest="50"
            Style="{StaticResource PrimaryButtonStyle}"
            Text="Confirmar envÃ­o"
            VerticalOptions="End" />
    </Grid>
</ContentPage>